<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="Karvis.Core" assembly="Karvis.Core">

  <class name="KMail">

    <id name="Id">
      <generator class="identity" />
    </id>

    <property name="Subject"/>
    <property name="Description"/>
    <property name="FromAddress"/>
    <property name="FromDescription"/>
    <property name="RelatedReferenceId"/>
    <property name="AddDate"/>
    <property name="IsSent"/>
    <property name="TryCounter"/>
  </class>

</hibernate-mapping>