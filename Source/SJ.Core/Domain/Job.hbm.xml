<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="SJ.Core" assembly="SJ.Core">

  <class name="Job">

    <id name="Id">
      <generator class="identity" />
    </id>

    <property name="Title"/>
    <property name="Description"/>
    <property name="VisitCount"/>
    <property name="FeedCount"/>
    <property name="Tag"/>
    <property name="DateAdded"/>
    <property name="Url"/>

    <set
      cascade="all-delete-orphan"
      name="Comments"
      inverse="true">
      <key column="job_id"/>
      <one-to-many class="Comment" />
    </set>

  </class>

</hibernate-mapping>