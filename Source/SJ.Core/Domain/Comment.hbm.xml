<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="SJ.Core" assembly="SJ.Core">

  <class name="Comment">

    <id name="Id">
      <generator class="identity" />
    </id>

    <property name="Value"/>

    <many-to-one
      name="ParentJob"
      class="Job"
      column="job_id"
      cascade="all-delete-orphan"
      not-null="true"/>
  </class>

</hibernate-mapping>